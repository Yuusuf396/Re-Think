{
  "name": "climatiqq-backend",
  "description": "Django REST API for climate impact tracking",
  "repository": "https://github.com/Yuusuf396/green-track",
  "keywords": ["django", "python", "climate", "api"],
  "env": {
    "DEBUG": {
      "description": "Debug mode",
      "value": "False"
    },
    "SECRET_KEY": {
      "description": "Django secret key",
      "generator": "secret"
    },
    "ALLOWED_HOSTS": {
      "description": "Allowed hosts",
      "value": "climatiqq-backend.onrender.com"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "scripts": {
    "postdeploy": "cd climatiqq-backend && python manage.py migrate"
  }
} 